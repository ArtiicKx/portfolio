---
interface Props {
  link?: string;
}

const { link } = Astro.props;
---

<a
  href={link ? `${link}` : `#`}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex h-full animate-background-shine cursor-pointer items-center justify-center rounded-full border border-slate-800
  bg-[linear-gradient(110deg,#00D395,45%,#4AF5C3,55%,#00D395)] bg-[length:250%_100%]
  px-2 text-sm font-medium text-black backdrop-blur-3xl shadow-md mt-2"
>
  <slot />
</a>

---
import Layout from "../layouts/Layout.astro";
import UserIcon from "../components/icons/UserIcon.astro";
import GridProjects from "../components/GridProjects.astro";
import ExperienceTimeline from "../components/ExperienceTimeline.astro";

import Badge from "../components/Badge.astro";
import Folder from "../components/icons/Folder.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Contact from "../components/Contact.astro";
import Phone from "../components/icons/Phone.astro";

const getCurrentYear = () => {
  return new Date().getFullYear();
};

const getYearsOfExperience = () => {
  const startYear = 2019;
  const currentYear = getCurrentYear();
  return currentYear - startYear;
};
---

<Layout>
  <div class="flex flex-col gap-4">
    <div class="">
      <h1 class="text-3xl font-bold text-white flex items-center gap-4 mt-10">
        Hi, I'm Ian Ferrero <Badge>Available for hire</Badge>
      </h1>
      <h2 class="text-xl text-white/60">Front-end Developer</h2>
    </div>
    <div class="flex flex-col gap-3 mt-5">
      <div class="flex items-center gap-2">
        <UserIcon class="inline-block w-6 h-6 text-white" />
        <h2 class="text-2xl font-bold text-white">About me</h2>
      </div>
      <p class="text-lg text-white/60">
        <span
          class="font-bold underline decoration-greenPrimary underline-offset-4 text-white"
        >
          +{getYearsOfExperience()} years
        </span> experience in web development focused on front-end, I have
        worked independently on freelance projects, perfecting worked
        independently on freelance projects, perfecting my technical skills. my
        technical skills.
      </p>
      <p class="text-lg text-white/60">
        My pragmatic approach is reflected in creating effective and visually
        appealing web solutions, collaborating effectively with solutions,
        collaborating effectively with designers and multidisciplinary teams to
        achieve designers and multidisciplinary teams to achieve common goals.
      </p>
    </div>

    <div class="flex flex-col gap-3 mt-5">
      <div class="flex items-center gap-2">
        <Briefcase class="inline-block w-6 h-6 text-white" />
        <h2 class="text-2xl font-bold text-white">Experience</h2>
      </div>
      <ExperienceTimeline />
    </div>

    <div class="flex flex-col gap-3 mt-5">
      <div class="flex items-center gap-2">
        <Folder class="inline-block w-6 h-6 text-white" />
        <h2 class="text-2xl font-bold text-white">Projects</h2>
      </div>
      <GridProjects />
    </div>
  </div>
  <div class="flex flex-col gap-3 mt-5">
    <div class="flex items-center gap-2">
      <Phone class="inline-block w-6 h-6 text-white" />
      <h2 class="text-2xl font-bold text-white">Contact</h2>
    </div>
    <Contact />
  </div>

  <footer class="mt-2">
    <span class="text-white/60 text-center block py-5 text-sm">
      Made with ❤️ by{" "} Ian Ferrero
    </span>
  </footer>
</Layout>
